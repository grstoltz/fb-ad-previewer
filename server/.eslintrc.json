{
    "env": {
      "browser": true,
      "jest": true
    },
    "extends": ["airbnb", "prettier"],
    "plugins": [
      "prettier"
    ],
    "parser": "babel-eslint",
    "rules": {
      "quotes": [2, "single", { "avoidEscape": true }],
      "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
      "no-shadow": 0,
      "class-methods-use-this": 0,
      "consistent-return": 0,
      "no-unused-vars": 0,
      "import/no-named-as-default": 0,
      "func-names": 0,
      "no-underscore-dangle": 0,
      "no-await-in-loop": 0,
      "no-loop-func": 0
    }
}